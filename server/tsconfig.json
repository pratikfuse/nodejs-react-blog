{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es2017",
        "declaration": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "allowJs": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules"]
}